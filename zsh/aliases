alias ll='ls -lah'
alias ga='git add'
alias gc='git commit'
alias gp='git push'
alias sourcezsh='source $DOTFILES/zsh/.zshrc'
alias v='fd --type f --hidden --exclude .git | fzf-tmux -p | xargs nvim'
alias vd='fd --type d --hidden --exclude .git | fzf-tmux -p | xargs nvim'
alias gco='git branch | fzf-tmux -p --preview-window right --header "Checkout Recent Branch" --preview "git diff {1} --color=always" | xargs git checkout'
alias tldrf='tldr --list | fzf-tmux -p --preview "tldr {1}" --preview-window=right,70% | xargs tldr'
