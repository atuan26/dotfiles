# =============================================================================
# Aliases Configuration
# =============================================================================
# This file contains all aliases for better organization.

# =============================================================================
# GENERAL ALIASES
# =============================================================================

# Python
alias py="python3"
alias python="python3"
alias pip="pip3"

# System
alias cls="clear"
alias ..="cd .."
alias ...="cd ../.."
alias ....="cd ../../.."

# Modern replacements
alias catt="bat"
alias cat="bat"
alias ls="exa"
alias tree="exa --tree"

# =============================================================================
# SYSTEM ALIASES
# =============================================================================

# Process management
alias ps="ps aux"
alias psg="ps aux | grep"
alias killg="killall -9"

# Network
alias ports="netstat -tuln"
alias myip="curl -s https://ipinfo.io/ip"

# =============================================================================
# EDITOR ALIASES
# =============================================================================

alias v="nvim"
alias vi="nvim"
alias vim="nvim"