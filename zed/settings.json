// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run the `open default settings` command
// from the command palette or from `Zed` application menu.
{
  "ssh_connections": [
    {
      "host": "dify-dev",
      "projects": [
        {
          "paths": ["~/01_source/dify-milize"]
        }
      ]
    },
    {
      "host": "dify-stg",
      "projects": [
        {
          "paths": ["~/01_source/dify-milize"]
        }
      ]
    }
  ],
  "features": {
    "inline_completion_provider": "none"
  },
  "buffer_font_family": "Fira Code",
  "buffer_font_fallbacks": ["Agave Nerd Font"],
  "ui_font_family": "Fira Code",
  "assistant": {
    "button": false,
    "default_model": {
      "provider": "copilot_chat",
      "model": "gpt-4o"
    },
    "version": "2"
  },
  "buffer_line_height": {
    "custom": 1.5
  },
  "base_keymap": "VSCode",
  "vim_mode": true,
  "ui_font_size": 16,
  "buffer_font_size": 16,
  "format_on_save": "off",
  "relative_line_numbers": true,
  "theme": {
    "mode": "system",
    "light": "Dracula",
    "dark": "Dracula"
  },
  "toolbar": {
    // Whether to show breadcrumbs.
    "breadcrumbs": true,
    // Whether to show quick action buttons.
    "quick_actions": false,
    // Whether to show the Selections menu in the editor toolbar
    "selections_menu": false
  },
  // Whether to show buffer search results in the scrollbar.
  "terminal": {
    // "line_height": "standard",
    "line_height": {
      "custom": 1.2
    },
    "toolbar": {
      // Whether to display the terminal title in its toolbar.
      "title": false
    },
    "button": false,
    "detect_venv": "off"
  },
  "remove_trailing_whitespace_on_save": true,
  "scrollbar": {
    "show": "auto",
    // Whether to show cursor positions in the scrollbar.
    "cursors": false,
    // Whether to show git diff indicators in the scrollbar.
    "git_diff": true,
    // Whether to show buffer search results in the scrollbar.
    "search_results": false,
    // Whether to show selected symbol occurrences in the scrollbar.
    "selected_symbol": false,
    // Whether to show diagnostic indicators in the scrollbar.
    "diagnostics": false
  },
  "search_wrap": false,
  "project_panel": {
    // Whether to show the project panel button in the status bar
    "button": false,
    // Default width of the project panel.
    "default_width": 240,
    // Where to dock the project panel. Can be 'left' or 'right'.
    "dock": "right",
    // Whether to show file icons in the project panel.
    "indent_size": 20
  },
  "outline_panel": {
    // Whether to show the outline panel button in the status bar
    "button": false,
    // Default width of the outline panel.
    "default_width": 300,
    // Where to dock the outline panel. Can be 'left' or 'right'.
    "dock": "right"
  },
  "collaboration_panel": {
    // Whether to show the collaboration panel button in the status bar.
    "button": false,
    // where to dock the collaboration panel. can be 'left' or 'right'.
    "dock": "right",
    // default width of the collaboration panel.
    "default_width": 240
  },
  "chat_panel": {
    "button": false,
    "dock": "right"
  },
  "notification_panel": {
    "button": false,
    "dock": "right",
    "default_width": 380
  },
  "tab_bar": {
    // Whether or not to show the tab bar in the editor
    "show": true,
    // Whether or not to show the navigation history buttons.
    "show_nav_history_buttons": false
  },
  "tabs": {
    "git_status": true,
    "file_icons": true
  },
  "ensure_final_newline_on_save": true,
  "extend_comment_on_newline": false,
  "telemetry": {
    // Send debug info like crash reports.
    "diagnostics": false,
    // Send anonymized usage data like what languages you're using Zed with.
    "metrics": false
  },
  "auto_update": true,
  "diagnostics": {
    "include_warnings": false
  },
  "git": {
    "inline_blame": {
      "enabled": true,
      "delay_ms": 600
    }
  },
  "vim": {
    "toggle_relative_line_numbers": true,
    "use_system_clipboard": "always",
    "use_multiline_find": false,
    "use_smartcase_find": false,
    "custom_digraphs": {}
  },
  "line_indicator_format": "short",
  "gutter": {
    // Whether to show line numbers in the gutter.
    "line_numbers": true,
    // Whether to show code action buttons in the gutter.
    "code_actions": false,
    // Whether to show runnables buttons in the gutter.
    "runnables": true,
    // Whether to show fold buttons in the gutter.
    "folds": false
  },
  "languages": {
    "Python": {
      "language_servers": ["pyright", "ruff"],
      // "format_on_save": "on",
      "formatter": [
        {
          "code_actions": {
            "source.organizeImports.ruff": true,
            "source.fixAll.ruff": true
          }
        },
        {
          "language_server": {
            "name": "ruff"
          }
        }
      ]
    }
  }
}
